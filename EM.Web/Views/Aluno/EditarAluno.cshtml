@{
    ViewData["Title"] = "Editar Aluno";
}
<div class="text-center">
    <h1 class="display-4">Editar Aluno</h1>
</div>

<form action="#" onsubmit="return valida_nome(this)">
    <div class="form-row">

        <div class="form-group col-md-12">
            <label for="inputNome">Nome</label>
            <input type="text" class="form-control" id="nomeCompleto" autocomplete="off" required placeholder="Nome Completo" pattern="[A-Za-z]+">
        </div>


    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputDate">Data Nasc.</label>
            <input type="text" class="form-control" id="inputDate" maxlength="10" placeholder="DD/MM/AAAA" oninput="mascaraData(this)" autocomplete="off" required>
        </div>


        <div class="form-group col-md-6">
            <label for="inputCPF">CPF</label>
            <input type="text" class="form-control" id="inputCPF" placeholder="XXX.XXX.XXX-XX" maxlength="14" oninput="this.value = cpf(this.value)" autocomplete="off">
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="inputGender">Gênero</label>
            <select id="inputGender" class="form-control">
                <option value="" selected disabled hidden>Escolha o gênero</option>
                <option value="masculino">Masculino</option>
                <option value="feminino">Feminino</option>
            </select>
        </div>




        <div class="form-group col-md-5">
            <label for="inputCPF">Cidade</label>
            <input type="text" class="form-control" id="inputCidade" required placeholder="Cidade" autocomplete="off">
        </div>
        <div class="form-group col-md-5">
            <label for="inputCPF">Estado</label>
            <input type="text" class="form-control" id="inputCidade" required maxlength="10" placeholder="Estado" autocomplete="off">
        </div>
    </div>
    <a class="btn btn-primary col-12" type="submit" action="#" role="button" asp-controller="Aluno" asp-action="">Salvar Alterações</a>
    <a class="btn btn-secondary col-12" role="button" asp-controller="Home" asp-action="Index">Pagina Inicial</a>
</form>